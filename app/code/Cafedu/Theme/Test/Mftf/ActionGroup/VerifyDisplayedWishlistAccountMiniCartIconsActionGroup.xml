        <seeElement selector="{{WishlistAccountCartIconsSection.WishlistIcon}}" stepKey="verifyWishlistIconDisplayed"/>
        <seeElement selector="{{WishlistAccountCartIconsSection.AccountIcon}}" stepKey="verifyAccountIconDisplayed"/>
        <seeElement selector="{{WishlistAccountCartIconsSection.MiniCartIcon}}" stepKey="verifyMiniCartIconDisplayed"/>
    </actionGroup>
</actionGroups>
