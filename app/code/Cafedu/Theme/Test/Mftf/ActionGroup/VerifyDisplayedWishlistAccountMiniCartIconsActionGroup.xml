<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <actionGroup name="VerifyDisplayedWishlistAccountMiniCartIconsActionGroup">
        <annotations>
            <description>Verify if Wishlist icon, Account icon and Mini cart icon are displayed</description>
